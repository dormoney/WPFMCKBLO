<Page x:Class="WPFMCKBLO.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFMCKBLO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid Background="Black">
        <Button x:Name="Exit" Content="&lt;" Block.LineHeight="1" Margin="28,0,0,0" Click="Exit_Click" FontFamily="Papyrus" Background="#00000000" Foreground="#FF616100" BorderBrush="#00000000" BorderThickness="0,0,0,0" Grid.RowSpan="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="UltraBold" FontSize="36" Height="59" Width="59"/>
        <Button x:Name="stats" Content="MULTIPLAYER" HorizontalAlignment="Center" Margin="0,181,0,0" VerticalAlignment="Top" Height="44" Width="199" Click="stats_Click" FontFamily="{StaticResource Exocet Light}" FontSize="24" Background="#00000000" Foreground="#FF616100" BorderBrush="#00000000"/>
    </Grid>
</Page>
